<h1>Volunteer assignments for <%= @event.name %></h1>

<table>
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
    </tr>
  </thead>

  <tbody>
    <% @assignments.each do |assignment| %>
      <tr>
        <td><%= assignment.volunteer.firstname %></td>
        <td><%= assignment.volunteer.lastname %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<br>
<%= link_to 'Back', @event %>
<%= link_to 'Sign up for this event', new_event_assignment_path %>
