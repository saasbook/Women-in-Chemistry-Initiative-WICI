<h1><%= @task.name %></h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Deadline</th>
      <th>Volunteers</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><%= @task.description %></td>
      <td><%= @task.deadline %></td>
      <td><%= @task.volunteers.each do |volunteer| %>
        <%= volunteer.email %>
        <% end %>
      </td>
      <td><%= link_to 'Edit', edit_event_task_path(@task, :event_id => params[:event_id]) %></td>
      <td><%= link_to 'Destroy', event_task_url, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  </tbody>
</table>

<br>

<%= link_to 'Event', event_url(@event) %><br>
<%= link_to 'Back', event_tasks_url(@event) %><br>
