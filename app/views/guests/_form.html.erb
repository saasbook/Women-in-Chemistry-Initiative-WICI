<%= form_with(model: guest, url: [event, guest], local: true) do |form| %>

  <% guest.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
  Event: <%= event.name %><br>
  First Name: <%= form.text_field :firstname, id: :firstname %><br>
  Last Name: <%= form.text_field :lastname, id: :lastname %><br>
  Email: <%= form.text_field :email, id: :email %><br>
  Optional <br>
  Occupation: <%= form.select :occupation, [['Undergrad','undergrad'],['Graduate','graduate'], ['Postdoc','postdoc'], ['Faculty Staff','faculty staff'], ['Other','other']], :selected => ['Other','other'] %>
  Gender: <%= form.select :gender, [['Male','male'],['Female','female'],['Other','other'],['Prefer not to say','prefer not to say']], :selected => ['Other','other'] %>
  Department: <%= form.select :department, [['Chemistry', 'chemistry'], ['Chemical Engineering', 'chemical Engineering'], ['Stem non-chemistry', 'stem non-chemistry'], ['Other','other']], :selected => ['Other','other'] %><br>
  <%= form.submit "Submit", id: :submit  %>
<% end %>