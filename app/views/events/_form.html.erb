<%= render 'shared/errors', object: event %>

<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :event_name %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, id: :event_description %>
  </div>

  <div class="field">
    <%= form.label :date %>
    <%= form.datetime_select :date, id: :event_date %>
  </div>

  <div class="field">
    <%= form.label :location %>
    <%= form.text_field :location, id: :event_location %>
  </div>

  <div class="field">
    <%= form.label :tickets %>
    <%= form.text_field :tickets, id: :event_tickets %>
  </div>

  <div class="field">
    <%= form.label :capacity %>
    <%= form.text_field :capacity, id: :capacity %>
  </div>

  <div class="form-group">
    <%= form.label "Image" %>
    <%= form.file_field :image %>
  </div>
  <% if event.image? %>
    <div class="form-group">
      <%= form.label "Remove Image" %>
      <%= form.check_box :remove_image %>
    </div>
  <% end %>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
