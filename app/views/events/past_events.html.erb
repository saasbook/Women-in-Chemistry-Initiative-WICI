<div class="container-fluid" style="padding-top: 20px; padding-left: 30px">
  <h1>Past Events</h1>

  <table class="table table-borderless table-hover">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Description</th>
        <th scope="col">Date</th>
        <th scope="col">Location</th>
        <th scope="col">Tickets</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td><%= event.name %></td>
          <td><%= event.description %></td>
          <td><%= event.date %></td>
          <td><%= event.location %></td>
          <td><%= event.has_tickets %></td>
          <td><%= link_to 'Show', event %> <%= link_to 'Edit', edit_event_path(event) if admin_signed_in? %>  <%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } if admin_signed_in? %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Back', events_path, class: "btn btn-secondary text-white"%>
</div>
